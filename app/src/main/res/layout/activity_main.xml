<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="359dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="394dp"
        android:layout_height="289dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.072">

        <TableRow
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bttnAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnAcNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnBorrarNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnRaiz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnRaizNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnMas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnMasNombre"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bttnSiete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnSieteNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnOcho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnOchoombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnNueve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnNueveNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnMenos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnMenosNombre"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/brrnCuatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnCuatroNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnCincoNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnSeis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnSeisNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnMulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnMultiNombre"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bttnUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnUnoNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnDosNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnTresNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnEntre"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="@string/btnDivNombre"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bttnCero"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="@string/btnCeroNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnIgual"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="@string/btnIgualNombre"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bttnPunto"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="@string/btnPuntoNombre"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>